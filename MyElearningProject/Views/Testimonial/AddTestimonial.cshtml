@model MyElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Referans Girişi</h2>
<form method="post">
    <br />
    <label>Referans Ad Soyadı</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br /><br />
    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" />
    <br /><br />
    <label>Referans Görseli</label>
    <input type="text" name="ImageUrl" class="form-control" />
    <br /><br />
    <label>Yorum</label>
    <textarea class="form-control" name="Comment" rows="5"></textarea>
    <br /><br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br /><br />
    <button class="btn btn-primary">Referansı Kaydet</button>
</form>


