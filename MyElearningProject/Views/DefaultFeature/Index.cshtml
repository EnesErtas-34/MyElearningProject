@model List<MyElearningProject.DAL.Entities.DefaultFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Öne Çıkarılan
                <br /><br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Görsel2</th>
                        <th>Başlık</th>
                        <th>Başlık2</th>
                        <th>Açıklama</th>
                        <th>Açıklama2</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><img src="@item.ImageURL" style="height:50px; width:60px; border-radius:50%" /></td>
                            <td><img src="@item.ImageURL2" style="height:50px; width:60px; border-radius:50%" /></td>
                            <td>@item.Title</td>
                            <td>@item.Title2</td>
                            <td>@item.Description</td>
                            <td>@item.Description2</td>
                            <td><a href="/DefaultFeature/DeleteDefaultFeature/@item.DefaultFeatureID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/DefaultFeature/UpdateDefaultFeature/@item.DefaultFeatureID" class="btn btn-outline-success">Güncelle</a></td>
                            
                        </tr>
                    }
                </table>
                <a href="/DefaultFeature/AddDefaultFeature/" class="btn btn-outline-primary">Yeni Alan Girişi</a>
            </div>
        </div>
    </div>
</div>



