@model MyElearningProject.DAL.Entities.AboutFeature
@{
    ViewBag.Title = "UpdateAboutFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Alan Güncelleme Sayfası</h2>
<form method="post">
    <br />
    <input type="hidden" name="AboutFeatureID" value="@Model.AboutFeatureID" />
    <label>İkon</label>
    <input type="text" name="icon" value="@Model.icon" class="form-control" />
    <br /><br />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br /><br />
    <label>Açıklama</label>
    <input type="text" name="Description" value="@Model.Description" class="form-control" />
    <br /><br />
    <button class="btn btn-primary">Alanı Güncelle</button>
</form>


