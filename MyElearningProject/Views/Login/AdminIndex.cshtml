</head>

<body>
    <div class="signinform">
        <!-- container -->
        <div class="container">
            <!-- main content -->
            <div class="w3l-form-info">
                <div class="w3_info">
                    <h2>Admin Giriş</h2>
                    <form method="post">
                        <div class="input-group">
                            <span><i class="fas fa-user" aria-hidden="true"></i></span>
                            <input type="email" placeholder="Kullanıcı Adı" required="" name="Username">
                        </div>
                        <div class="input-group">
                            <span><i class="fas fa-key" aria-hidden="true"></i></span>
                            <input type="Password" placeholder="Şifre" required="" name="Password">
                        </div>
                        
                        <button class="btn btn-primary btn-block" type="submit">Giriş Yap</button>
                    </form>
                  
                   
                </div>
            </div>
            <!-- //main content -->
        </div>
        <!-- //container -->
        
    </div>

    <!-- fontawesome v5-->
    <script src="~/Templates/starter/js/fontawesome.js"></script>

