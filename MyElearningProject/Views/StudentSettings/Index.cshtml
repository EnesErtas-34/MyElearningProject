﻿@model MyElearningProject.DAL.Entities.Student
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/StudentAdminLayout/Index.cshtml";
}

<div class="row" style=" width: 100%; height: 600px; overflow: auto; ">
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-block">
                <center class="m-t-30">
                    <img src="https://media.istockphoto.com/id/1331335536/tr/vekt%C3%B6r/female-avatar-icon.jpg?s=1024x1024&w=is&k=20&c=s573kCBlTQ1OvaO9zbt2oEjCViCSktGJsmKv6o1fchc=" class="img-circle" width="150" />
                    <h4 class="card-title m-t-10">@Model.Name @Model.Surname</h4>
                    <h6 class="card-subtitle">@Model.Email</h6>
                    <div class="row text-center justify-content-md-center">
                        <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-people"></i> <font class="font-medium">50</font></a></div>
                        <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-picture"></i> <font class="font-medium">54</font></a></div>
                    </div>
                </center>
            </div>
        </div>
    </div>

    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-block">
                <form class="form-horizontal form-material" method="post">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.StudentID)
                        <label class="col-md-12">Ad</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Soyad</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Başlık</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Password</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>